<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::message.choose_adapter') }}</h4>
</div>

<div class="modal-body">
    {% if not adapters.isEmpty() %}
        <ul class="nav nav-stacked">
            {% for adapter in adapters %}
                <li>
                    <a href="{{ url_to('admin/files/disks/create?adapter=' ~ adapter.namespace) }}">
                        <strong>{{ trans(adapter.getTitle()) }}</strong>
                        <br>
                        <small>{{ trans(adapter.getDescription()) }}</small>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        {{ trans('streams::message.no_results') }}
    {% endif %}
</div>
